	<!-- popup message -->
	<div  class='popupMessageDiv'><br>
		<div id="msgContent" style='height:90%'>
				<div align="center" id="chartHeader"></div>
				<div id="heartcontainer" style="width:1000px; height: 250px; margin: 0 auto"></div>	<br><br>
				<div id="heartbeat" style="width:1000px; height: 250px; margin: 0 auto"></div>	
		</div>
		<div><button onclick="closeMsgPopDiv()" style='width:200px;height:30px'>Close</div>
	</div>
	
	
	
	
	
	<!-- change password -->
	<div  class='changePasswordDiv'><h3>Change Password</h3>
	<hr><div id="chgpwdMessage">	&#9888; Note: Password should be minimum 8 character  and maximun 20 character in length and should contain atleast one Uppercase, one Lowercase, one numeric and one special character</div>
		<table width="100%">
			<tr >
				<td class="field-wrap-lable"><label> New Password<span class="req">*</span></label> </td>
				<td class="field-wrap"><input type="password" style="width:250px" name="newPassword" id="newPassword" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label> Confirm Password<span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="password" style="width:250px" name="confirmPassword" id="confirmPassword" required autocomplete="off" maxlength="100" /> </td>
			</tr>
		</table><br>
		<div><button onclick="closeCPMsgPopDiv()" style='width:200px;height:30px'>Close</button>&nbsp;&nbsp;&nbsp;&nbsp;
				<button onclick="saveChangePassword()" id="chgPwdSubmit" style='width:200px;height:30px'>Submit</button>
		</div>
	</div>
	
	
	
	
	
	
	<!-- add patient-->
	<div  class='addPatientDiv'><h3>Patient's Details</h3>
	<hr><span id="addPatientMsg" style="color:red"></span>	
		<table width="100%">
			<tr>
				<td class="field-wrap-lable"><label> First name<span class="req">*</span></label> </td>
				<td class="field-wrap"><input type="text" style="width:250px" name="fname" id="fname" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Last Name<span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="text" style="width:250px" name="lname" id="lname" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Date of birth<span class="req">*</span></label></td>
				<td class="field-wrap"><input name="dob" type="text" style="width:250px" id="dob" onfocus="(this.type='date')" onfocusout="(this.type='text')" required autocomplete="off" ></td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Email<span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="email" style="width:250px" name="email" id="email" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Phone No<span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="text" style="width:250px" name="phone" id="phone" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Medical History<span class="req">*</span></label>  </td>
				<td class="field-wrap"><textarea  style="width:250px;resize: none;" name="mhistory" id="mhistory" required autocomplete="off" maxlength="500" /> </textarea></td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Emergency Contact Name <span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="text" style="width:250px" name="emergencyName" id="emergencyName" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			<tr>
				<td class="field-wrap-lables"><label>Emergency Contact Phone No<span class="req">*</span></label>  </td>
				<td class="field-wrap"><input type="text" style="width:250px" name="emergencyPhone" id="emergencyPhone" required autocomplete="off" maxlength="100" /> </td>
			</tr>
			
		</table><br><br><br>
		<div><button onclick="closeAddPatientPopDiv()" style='width:200px;height:30px' id="addPatClose">Close</button>&nbsp;&nbsp;&nbsp;&nbsp;
				<button id="addPatSubmit" onclick="addPatient()" style='width:200px;height:30px'>Submit</button>
		</div>
	</div>

